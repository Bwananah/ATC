import alsaaudio
import wave

# Set up audio device
device = 'blu'
card = '0'

# Set up audio file
file_path = 'path/to/your/wav/file'
audio_file = wave.open(file_path, 'rb')

# Set up audio playback stream
output = alsaaudio.PCM(alsaaudio.PCM_PLAYBACK, alsaaudio.PCM_NORMAL, device=device)
output.setformat(alsaaudio.PCM_FORMAT_S16_LE)
output.setchannels(audio_file.getnchannels())
output.setrate(audio_file.getframerate())
output.setperiodsize(1024)

# Play audio file to output device
while True:
    data = audio_file.readframes(1024)
    if not data:
        break
    output.write(data)

# Clean up
audio_file.close()
output.close()

